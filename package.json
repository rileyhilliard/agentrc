{
  "name": "agentrc",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "agentrc": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "files": [
    "dist",
    "schemas"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node --packages external",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:update": "bun test --update-snapshots",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "check": "biome check . && tsc --noEmit",
    "prepare": "lefthook install"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "gray-matter": "^4.0.3",
    "yaml": "^2.8.0",
    "ajv": "^8.17.1",
    "picomatch": "^4.0.2",
    "chalk": "^5.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/bun": "^1.3.9",
    "lefthook": "^2.1.1",
    "typescript": "^5.9.3"
  }
}
